@model CityGoodTaste.ApplicationUser

<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title specialTitle">Log In</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="input-group col-sm-12">
                        <span class="input-group-addon"><i class="oi" data-glyph="person"></i></span>
                        <input id="email" type="text" class="form-control input-sm modalInput" name="email" placeholder="Login">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group col-sm-12">
                        <span class="input-group-addon"><i class="oi" data-glyph="key"></i></span>
                        <input id="password" type="password" class="form-control input-sm modalInput" name="password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-11">
                        <div class="checkbox">
                            <label><input id="rememberMe" type="checkbox">Remember me</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button id="loginButton" type="submit" class="btn btn-default btn-sm modalButton">Log In</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-11">
                        <div>Still don't have an account?</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="button" id="signUpOpenButton" class="btn btn-default btn-sm modalButton" data-toggle="modal" data-target="#modalSignUp" data-dismiss="modal">Sign Up</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>