@model IEnumerable < CityGoodTaste.Models.Restaurant >
@{
    ViewBag.Title = "Home Page";
}

<div>
    @{
        CityGoodTaste.BusinessLayer.RestaurantDataManager manager = new CityGoodTaste.BusinessLayer.RestaurantDataManager();
        var ListRestaurantEvents = manager.GetTopListRestaurantEvents();
    }
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < ListRestaurantEvents.Count; i++)
            {
                <li data-target="#myCarousel" data-slide-to=@i></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @foreach (var item in ListRestaurantEvents)
            {
                if (item == ListRestaurantEvents.First())
                {
                    <div class="item active">
                        <img class="img-responsive" src="https://placehold.it/1200x300?text=Реклама" alt="Image">
                        <div class="carousel-caption">
                            <a href='@Url.Action("Details", "Restaurant", new { id = item.Restaurant.Id })' style="color:black; text-decoration:none">
                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            </a>
                        </div>
                    </div>
                }
                else
                {

                    <div class="item">
                        <img class="img-responsive" src="https://placehold.it/1200x300?text=Реклама" alt="Image">
                        <div class="carousel-caption">
                            <a href='@Url.Action("Details", "Restaurant", new { id = item.Restaurant.Id })' style="color:black; text-decoration:none">

                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            </a>
                        </div>
                    </div>
                }
            }
            
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">@CityGoodTaste.Resources.Resource.Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">@CityGoodTaste.Resources.Resource.Next</span>
        </a>
    </div>
    @using (Html.BeginForm("Restaurants", "Restaurant", FormMethod.Get, new { @class = "searchForm" }))
    {
        <div class="input-group" style="padding-bottom:10px; padding-top:10px;">

            <input type="text" class="form-control" style="max-width:none" id="searchText" name="searchText">
            <div class="input-group-btn">
                <button type="submit" class="btn btn-danger">@CityGoodTaste.Resources.Resource.Search</button>
            </div>
        </div>
    }
  
    <div class="container-fluid bg-3 text-center">
        <h3>@CityGoodTaste.Resources.Resource.RecommendedRestaurants:</h3><br>
        <div class="row NoMargin">
            @foreach (var item in Model)
            {
                <div class="col-sm-3" style="text-align:left;">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <a href='@Url.Action("Details", "Restaurant", new { id = item.Id })' style="color:black; text-decoration:none">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        </div>
                        <a href='@Url.Action("Details", "Restaurant", new { id = item.Id })'>
                            <img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%; height:200px" alt="Image" />
                        </a>
                        <div class="panel-footer">
                            <span class="oi oi-timer"></span> @Html.DisplayFor(modelItem => item.Address)<br />
                            <span class="oi oi-timer"></span> @Html.DisplayFor(modelItem => item.PhoneNumber)<br />
                        </div>
                    </div>
                </div>
            }
        </div>

      <br>

    </div>
    <br><br>
</div>