@model IEnumerable<CityGoodTaste.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<form style="background-color:#333333;padding-left:1%; padding-right:1%">
    <div class="input-group" style="padding-bottom:10px; padding-top:10px;">
        <input type="text" class="form-control" placeholder="название ресторана, кухня, пункты меню" required>
        <div class="input-group-btn">
            <button type="button" class="btn btn-danger">Поиск ресторана</button>
        </div>
    </div>
</form>
<div>
    <div class="col-sm-3">
    <h4>категории</h4> 
    </div>
    <div class="col-sm-10">
        <div class="col-sm-2">
            <div class="panel panel-default">
                <div class="panel-heading">Название ресторана</div>
                <div class="panel-body"><img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image"></div>
                <div class="panel-footer">
                    <button type="button" class="btn btn-danger btn-block">Зарезервировать</button>
                </div>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageCheck)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformationAbout)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Floors)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AverageCheck)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InformationAbout)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Floors)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
