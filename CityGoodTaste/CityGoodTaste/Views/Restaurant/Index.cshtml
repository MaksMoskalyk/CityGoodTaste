@model IEnumerable<CityGoodTaste.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<form style="background-color:#333333;padding-left:1%; padding-right:1%">
    <div class="input-group" style="padding-bottom:10px; padding-top:10px;">
        <input type="text" class="form-control" placeholder="название ресторана, кухня, пункты меню" required>
        <div class="input-group-btn">
            <button type="button" class="btn btn-danger">Поиск ресторана</button>
        </div>
    </div>
</form>
<div>
    <div class="col-sm-2">
    <h4>категории</h4> 
        <p>@CityGoodTaste.Resources.Resource.Cuisine:</p>
        @{
            CityGoodTaste.BusinessLayer.RestaurantDataManager manager = new CityGoodTaste.BusinessLayer.RestaurantDataManager();
            var EventTypes = manager.GetAllCuisines();
        }
        @foreach (var item in EventTypes)
        {
            <div class="checkbox">
                <label><input id="EventTypesCheck" type="checkbox" value="">@item.Name</label>
            </div>
        }

        <p>@CityGoodTaste.Resources.Resource.RestaurantFeatures:</p>
        @{
            manager = new CityGoodTaste.BusinessLayer.RestaurantDataManager();
            var RestaurantFeatures = manager.GetAllRestaurantFeatures();
        }

        @foreach (var item in RestaurantFeatures)
        {
            <div class="checkbox">
                <label><input id="EventTypesCheck" type="checkbox" value="">@item.Name</label>
            </div>
        }
        <p>@CityGoodTaste.Resources.Resource.MealGroups:</p>
        @{
            manager = new CityGoodTaste.BusinessLayer.RestaurantDataManager();
            var MealGroups = manager.GetAllMealGroups();
        }

        @foreach (var item in MealGroups)
        {
            <div class="checkbox">
                <label><input id="EventTypesCheck" type="checkbox" value="">@item.Name</label>
            </div>
        }
        
    </div>
    <div class="col-sm-10">
        <div class="row NoMargin">
            @foreach (var item in Model)
            {
                <div class="col-sm-4" style="text-align:left;">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <a href='@Url.Action("Details", "Restaurant", new { id = item.Id })' style="color:black; text-decoration:none">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        </div>
                        <a href='@Url.Action("Details", "Restaurant", new { id = item.Id })'>
                            <img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%; height:200px" alt="Image" />
                        </a>
                        <div class="panel-footer">
                            <span class="oi oi-timer"></span> @Html.DisplayFor(modelItem => item.Address)<br />
                            <span class="oi oi-timer"></span> @Html.DisplayFor(modelItem => item.PhoneNumber)<br />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageCheck)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformationAbout)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Floors)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AverageCheck)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InformationAbout)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Floors)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
