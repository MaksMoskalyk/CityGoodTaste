@model IEnumerable<CityGoodTaste.Models.Restaurant>

<div class="col-sm-10">
    <div class="row NoMargin">
        @foreach (var item in Model)
            {
            <div class="col-sm-4" style="text-align:left;">
                <div class="panel panel-success">
                    <div class="panel-heading panelHeadingCustom">
                        <a href='@Url.Action("Details", "Restaurant", new { id = item.Id })' style="color:black; text-decoration:none">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </div>
                    <a href='@Url.Action("Details", "Restaurant", new { id = item.Id })'>
                        <img src="https://placehold.it/150x80?text=Restaurant" class="img-responsive" style="width:100%; height:200px" alt="Image" />
                    </a>
                    <div class="panel-footer panelFooterCustom">
                        <span class="oi oi-timer"></span> @Html.DisplayFor(modelItem => item.Address)<br />
                        <span class="oi oi-timer"></span> @Html.DisplayFor(modelItem => item.PhoneNumber)<br />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



