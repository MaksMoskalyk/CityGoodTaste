                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Рестораны", "Restaurants", "Restaurant")</li>
                        <li>@Html.ActionLink("Афиша", "Events", "Restaurant")</li>
                        <li><a data-toggle="modal" data-target="#BotModal" href="#">Умный помощник</a></li>
                    </ul>
                   @Html.Partial("_LoginPartial")
