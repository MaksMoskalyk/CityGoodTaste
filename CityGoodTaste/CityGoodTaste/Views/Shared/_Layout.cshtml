                </div>
            </div>
        </nav>

        <div class="container body-content NoMargin NoPadding" style="max-width:none">
            @RenderBody()
        </div>

        <div class="empty"></div>
    </div>


    <footer id="footer" class="container-fluid text-center"  style="margin: 0px; padding: 0px; background-color:crimson">
        <a class="up-arrow" href="#navPanel" data-toggle="tooltip" title="TO TOP">
            <span class="glyphicon glyphicon-chevron-up"></span>
        </a>
        <div>

        </div>      
    </footer>


    <div class="modal fade" id="BotModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color:#333333; color:white">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><span class="glyphicon glyphicon-user" style="color:white"></span> @CityGoodTaste.Resources.Resource.SmartAssistant</h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <p>В разработке</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-default pull-left" data-dismiss="modal">
                    <span class="glyphicon glyphicon-ok"></span>
                     Подтвердить</button>
                    <button type="submit" class="btn btn-danger btn-default pull-right" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span>
                      Отмена
                    </button>
                </div>
            </div>
        </div>
    </div> 

    @RenderSection("scripts", required: false)
