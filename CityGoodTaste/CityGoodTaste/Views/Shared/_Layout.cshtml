<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*Custom Scripts*@
    @Scripts.Render("~/bundles/defaultScript")
    @Scripts.Render("~/bundles/customScript")

    @*Default Styles*@
    @Styles.Render("~/bundles/defaultStyle")
    @Styles.Render("~/bundles/customStyle")

    <script src="~/Scripts/Custom/MainPage.js"></script>
</head>
<body>
    <nav id="navPanel" class="navbar navbar-inverse" style="margin-bottom:0px">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href='@Url.Action("Index", "Home")'>CGT</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(CityGoodTaste.Resources.Resource.Restaurants, "Index", "Restaurant")</li>
                    <li>@Html.ActionLink(CityGoodTaste.Resources.Resource.Events, "Events", "Restaurant")</li>
                    <li><a data-toggle="modal" data-target="#BotModal" href="#">@CityGoodTaste.Resources.Resource.SmartAssistant</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content NoMargin NoPadding" style="max-width:none">
        @RenderBody()
    </div>

    <footer class="container-fluid text-center"  style="margin: 0px; padding: 0px; background-color:crimson">
        <a class="up-arrow" href="#navPanel" data-toggle="tooltip" title="TO TOP">
            <span class="glyphicon glyphicon-chevron-up"></span>
        </a>

        <div  style="margin: 10px; padding: 0px; background-color:crimson">
            @using (Html.BeginForm("ChangeCulture", "Home", new { htmlAttributes = new { @class = "languageForm", style = "margin:0px;padding:0px;background-color:crimson;" } }, FormMethod.Post))
            {
                <div class="pull-right">
                    <div style="margin: 0px; padding: 0px; background-color:crimson">

                            <select name="lang">
                                <option disabled selected>@CityGoodTaste.Resources.Resource.ChooseLang</option>
                                <option value="en-US">English</option>
                                <option value="ru-RU">Русский</option>
                                <option value="uk-UA">Українська</option>
                            </select>
                        <button  type="submit" name="submit" class="btn-success" value="@CityGoodTaste.Resources.Resource.ChooseLang">@CityGoodTaste.Resources.Resource.ChooseLang</button>
                    </div>
                </div>
            }
        </div>       
    </footer>


    <div class="modal fade" id="BotModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color:#333333; color:white">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><span class="glyphicon glyphicon-user"></span> @CityGoodTaste.Resources.Resource.SmartAssistant</h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <p>В разработке</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-default pull-left" data-dismiss="modal">
                    <span class="glyphicon glyphicon-ok"></span>
                     Ok</button>
                    <button type="submit" class="btn btn-danger btn-default pull-right" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span>
                        Cancel
                    </button>
                </div>
            </div>

        </div>
    </div> 
    @RenderSection("scripts", required: false)
</body>
</html>