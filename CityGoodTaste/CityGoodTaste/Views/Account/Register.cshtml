                </div>
            </div>*@

        <div class="form-group">
            <div class="input-group col-md-12">
                <span class="input-group-addon"><i class="oi" data-glyph="envelope-closed"></i></span>
                <input id="email" type="text" class="form-control input-sm authenticationInput" name="email" placeholder="Mail">
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-md-12">
                <span class="input-group-addon"><i class="oi" data-glyph="key"></i></span>
                <input id="password" type="password" class="form-control input-sm authenticationInput" name="password" placeholder="Password">
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-md-12">
                <span class="input-group-addon"><i class="oi" data-glyph="key"></i></span>
                <input id="passwordConfirm" type="password" class="form-control input-sm authenticationInput" name="passwordConfirm" placeholder="Confirm Password">
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-md-5">
                <span class="input-group-addon"><i class="oi" data-glyph="person"></i></span>
                <input id="name" type="text" class="form-control input-sm authenticationInput" name="name" placeholder="Name">
            </div>
            <div class="input-group col-md-7">
                <span class="input-group-addon"><i class="oi" data-glyph="person"></i></span>
                <input id="surname" type="text" class="form-control input-sm authenticationInput" name="surname" placeholder="Surname">
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-md-12">
                <span class="input-group-addon"><i class="oi" data-glyph="phone"></i></span>
                <input id="email" type="text" class="form-control input-sm authenticationInput" name="phone" placeholder="Phone">
            </div>
        </div>
     
        <div class="form-group">
            <div class="col-md-12">
                <input id="signUpButton" type="submit" class="btn btn-default modalButton" value="Sign up" />
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}